@model IEnumerable<Ratings.Models.Movies>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Movie List</h2>
        </div>
        <div class="col-6 text" style="text-align:right">
            <a asp-controller="Movies" asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Add New Movie
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-dark" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Movie Name
                    </th>
                    <th>
                        Rating
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Movies movie in Model)
                {
                    <tr>
                        <td width="50%">@movie.Name</td>
                        <td width="30%">@movie.Rating</td>
                        <td class="text-center">
                            <div>
                                <a asp-controller="Movies" asp-route-Id="@movie.Id" asp-action="Edit" class="btn btn-warning ml-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Movies" asp-route-Id="@movie.Id" asp-action="Delete" onclick="return confirm('Are you sure to delete this record?')" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Movies Exist.</p>
    }

</div>